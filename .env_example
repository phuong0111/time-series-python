# ==========================================
# 1. DATA CONFIGURATION
# ==========================================
# Common Data Settings
DATA__DATA_PATH=./data/SMD
DATA__WINDOW_SIZE=10
DATA__BATCH_SIZE=32
DATA__USE_CACHE=True
DATA__CACHE_DIR=./cache

# --- OPTION A: SMD Dataset (Default) ---
DATA__DATASET_TYPE=SMD
DATA__SMD__ENTITY_ID=machine-1-1

# --- OPTION B: CIC-DDoS Dataset (Uncomment to use) ---
# DATA__DATASET_TYPE=CIC
# DATA__DATA_PATH=./data/CIC-DDoS2019/dataset.csv
# DATA__CIC__LABEL_COLUMN=Class
# Note: Lists must be valid JSON format
# DATA__CIC__SELECTED_COLUMNS=["Flow Duration", "Total Fwd Packets", "Total Backward Packets"]


# ==========================================
# 2. MODEL CONFIGURATION
# ==========================================
# Common Model Settings
MODEL__LATENT_DIM=8
MODEL__DROPOUT=0.2
MODEL__LEARNING_RATE=0.001
MODEL__EPOCHS=50
MODEL__CHECKPOINT_DIR=./checkpoints

# --- OPTION A: LSTM Autoencoder (Default) ---
MODEL__MODEL_TYPE=LSTM_AE
MODEL__LSTM__LSTM_UNITS=[64, 32]
MODEL__LSTM__ACTIVATION=relu

# --- OPTION B: TCN Autoencoder (Uncomment to use) ---
# MODEL__MODEL_TYPE=TCN_AE
# MODEL__TCN__NB_FILTERS=64
# MODEL__TCN__KERNEL_SIZE=3
# MODEL__TCN__DILATIONS=[1, 2, 4, 8]
# MODEL__TCN__ACTIVATION=relu
# MODEL__TCN__OUTPUT_ACTIVATION=linear

# --- OPTION C: Transformer Autoencoder (Uncomment to use) ---
# MODEL__MODEL_TYPE=TRANSFORMER_AE
# MODEL__TRANSFORMER__NUM_HEADS=4
# MODEL__TRANSFORMER__KEY_DIM=64
# MODEL__TRANSFORMER__FF_DIM=64
# MODEL__TRANSFORMER__FF_UNITS=[64, 32]
# MODEL__TRANSFORMER__NORM_EPSILON=1e-6
# MODEL__TRANSFORMER__ACTIVATION=relu
# MODEL__TRANSFORMER__OUTPUT_ACTIVATION=linear
# MODEL__TRANSFORMER__NUM_LAYERS=1


# ==========================================
# 3. LOSS CONFIGURATION
# ==========================================

# --- OPTION A: Standard MSE (Default) ---
LOSS__LOSS_TYPE=MSE

# --- OPTION B: Feature Scaled Reconstruction Loss (Uncomment to use) ---
# LOSS__LOSS_TYPE=FEATURE_SCALED
# LOSS__FEATURE_SCALED__PRETRAIN_EPOCHS=10
# LOSS__FEATURE_SCALED__EPSILON=1e-6

# --- OPTION C: Random Forest Weighted Loss (Uncomment to use) ---
# LOSS__LOSS_TYPE=RF_WEIGHTED
# LOSS__RF_WEIGHTED__N_ESTIMATORS=100
# LOSS__RF_WEIGHTED__RANDOM_STATE=42

# ==========================================
# 3. LOGGING CONFIGURATION
# ==========================================

LOGGING__LEVEL=INFO
LOGGING__LOG_FILE=./logs/training_run_01.log
LOGGING__SAVE_TO_FILE=True